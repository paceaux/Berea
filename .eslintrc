{
  "parser": "babel-eslint",
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["airbnb-base", "plugin:jsdoc/recommended"],
    "parserOptions": {
        "sourceType": "module",
        "babelOptions": {
            "configFile": "./babel.config.json"
        }
    },
    "globals": {
        "process": true,
        "describe": true,
        "test" : true,
        "expect": true,
        "beforeAll": true,
        "afterAll": true,
        "it": true
    },
    "rules": {
        "max-len": ["error", {"code": 130 }],
        "valid-jsdoc": "off"
    },
    "plugins": [
        "jsdoc"
    ],
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}                                          
